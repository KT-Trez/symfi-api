{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@app": ["main"],
      "@controllers": ["controllers"],
      "@resources": ["resources"],
      "@routers": ["routers"],
      "@services": ["services"],
      "@types": ["types"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src"]
}
